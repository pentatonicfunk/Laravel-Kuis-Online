                <li
                <?php echo (Request::is('users*') ? 'class="active"' : ''); ?>><a href="<?php echo URL::to('/users'); ?>">Users</a></li>
                <li
                <?php echo (Request::is('groups*') ? 'class="active"' : ''); ?>><a
                    href="<?php echo URL::to('/groups'); ?>">Groups</a></li>
                <?php endif; ?>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <?php if (Sentry::check()): ?>
                <li
                <?php echo (Request::is('users/show/' . Session::get('userId')) ? 'class="active"' : ''); ?>><a
                    href="/users/<?php echo Session::get('userId'); ?>"><?php echo Session::get('email'); ?></a></li>
                <li><a href="<?php echo URL::to('logout'); ?>">Logout</a></li>
                <?php else: ?>
                <li
                <?php echo (Request::is('login') ? 'class="active"' : ''); ?>><a href="<?php echo URL::to('login'); ?>">Login</a></li>
                <li
                <?php echo (Request::is('users/create') ? 'class="active"' : ''); ?>><a href="<?php echo URL::to('users/create'); ?>">Register</a></li>
                <?php endif; ?>
